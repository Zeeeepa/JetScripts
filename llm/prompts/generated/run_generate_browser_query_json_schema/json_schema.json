{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Philippines Online Selling Tips Schema",
  "type": "object",
  "properties": {
    "tips": {
      "type": "array",
      "description": "List of online selling tips",
      "items": {
        "type": "object",
        "required": [
          "tip"
        ],
        "properties": {
          "tip": {
            "type": "string",
            "description": "A specific online selling tip"
          },
          "category": {
            "type": "string",
            "description": "Category of the tip (e.g., marketing, logistics, legal)"
          },
          "resource_link": {
            "type": "string",
            "format": "uri",
            "description": "Optional URL to a relevant resource"
          }
        }
      }
    }
  },
  "required": [
    "tips"
  ]
}