{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Philippines TikTok Live Selling Registration Schema",
  "type": "object",
  "properties": {
    "steps": {
      "type": "array",
      "description": "Ordered list of registration steps for TikTok Live Selling",
      "items": {
        "type": "object",
        "required": [
          "step_number",
          "instruction"
        ],
        "properties": {
          "step_number": {
            "type": "integer",
            "description": "Step order number"
          },
          "instruction": {
            "type": "string",
            "description": "What the seller needs to do in this step"
          },
          "link": {
            "type": "string",
            "format": "uri",
            "description": "Optional URL to the form or page for this step"
          }
        }
      }
    }
  },
  "required": [
    "steps"
  ]
}